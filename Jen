pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Prepare HTML Project') {
            agent { label 'win-agent-2' }
            steps {
                // force workspace directory
                dir('C:\\jenkins\\agent2\\workspace\\DevOps_Project') {
                    deleteDir()
                    checkout scm
                }
            }
        }

        stage('Build') {
            steps {
                bat """
                echo Building project...
                """
            }
        }
    }
}
